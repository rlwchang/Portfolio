<% include ../partials/header %>

<div class="container container-padding">
    <h2 class="text-center">Add a new project!</h2>
    <form action="/projects" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="project[name]" placeholder="name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="project[image]" placeholder="image url">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="project[url]" placeholder="project url">
        </div>
        <div class="form-group">
            <label class="form-check-label"><input class="form-check-input" type="radio" name="project[type]" value="front-end"> Front-end</label>
            <label class="form-check-label"><input class="form-check-input" type="radio" name="project[type]" value="back-end"> Back-end</label>
            <label class="form-check-label"><input class="form-check-input" type="radio" name="project[type]" value="data-viz"> Data-viz</label>
            <label class="form-check-label"><input class="form-check-input" type="radio" name="project[type]" value="full-stack"> Full-stack</label>
        </div>
        <div class="form-group">
            <% skills.forEach(function(skill) { %>
                <label class="form-check-label"><input class="form-check-input" type="checkbox" name="project[tag]" value="<%= skill.name.replace(/ /gi, "-").toLowerCase() %>"> <%= skill.name %></label>
            <% }) %>
        </div>
        <div class="form-group">
            <label for="project-description">Description</label>
            <textarea id="project-description" name="project[description]" rows="2" placeholder="Please enter a brief description of the project"></textarea>
            <label for="project-features">Features</label>
            <textarea id="project-features" name="project[features]" rows="8" placeholder="Enter features separated by lines"></textarea>
        </div>
        <button class="btn btn-primary btn-block btn-lg">Submit</button>
    </form>
    <a href="/projects" class="btn btn-default">Go Back!</a>
</div>

<% include ../partials/footer %>
