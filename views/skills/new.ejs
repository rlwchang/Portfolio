<% include ../partials/header %>


<div class="container">
    <h2 class="text-center">Add a new skill!</h2>
    <form action="/skills" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="skill[name]" placeholder="name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="skill[svg]" placeholder="svg path description">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" min="0" max="6" name="skill[level]" placeholder="skill level 0-6">
        </div>
        <div class="form-group">
            <% _.categories.forEach(function(category) { %>
                <label class="form-check-label"><input class="form-check-input" type="radio" name="skill[type]" value="<%= category %>"> <%= _.fullName[category] %></label>
            <% }) %>
        </div>
        <div class="form-group">
            <label for="project-features">Abilities</label>
            <textarea id="project-features" name="skill[abilities]" rows="8" placeholder="Enter abilities separated by lines"></textarea>
        </div>
        <button class="btn btn-primary btn-block btn-lg">Submit</button>
    </form>
    <a href="/skills" class="btn btn-default">Go Back!</a>
</div>


<% include ../partials/footer %>
